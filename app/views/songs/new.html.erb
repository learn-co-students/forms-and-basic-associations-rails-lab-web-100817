<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.text_field :artist_name %>
  <%= f.collection_select :genre_name, Genre.all, :name, :name, {}, {id: "song_genre"}%>
  <%= f.text_field :note_contents, {id: 'song_notes_1', value: '', name: 'song[note_contents][]'} %>
  <%= f.text_field :note_contents, {id: 'song_notes_2', value: '', name: 'song[note_contents][]'} %>
  <br />

  <%= f.submit %>
<% end %>
